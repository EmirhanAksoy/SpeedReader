{
    "manifest_version": 3,
    "name": "Speed Reader on Hover",
    "version": "1.0",
    "description": "Click Start Reading on paragraphs to read fast with WPM and controls.",
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "192": "icons/icon192.png",
        "512": "icons/icon512.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png"
        },
        "default_title": "Speed Reader"
    },
    "options_page": "options.html"
}